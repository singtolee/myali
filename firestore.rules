service cloud.firestore {
  match /databases/{database}/documents {

    //admin user can do everything
    match /{document=**} {
      allow read;
      allow write: if get(/databases/$(database)/documents/USERS/$(request.auth.uid)).data.isAdmin == true;
    }

    match /USERS/{user} {
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.id;
    }

    match /ADDRESSES/{address} {
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.id;
    }

    match /PRODUCTS/{product} {
      //everyone can create, but data must be Product Object
      allow create;
    }

    match /CARTS/{cart} {
      allow create: if request.auth.uid !=null;
      allow update,delete: if resource.data.uid == request.auth.uid;
    }

    match /ORDERS/{order} {
      allow create: if request.auth.uid !=null;
      allow update: if resource.data.uid == request.auth.uid;
    }



    
  }
}
